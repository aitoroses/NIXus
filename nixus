#! /bin/bash

RESTORE_PATH=$(pwd)

NIXUS_HOME=~/.nixus
cd $NIXUS_HOME

source ./env.sh

build() {
    docker-compose build
}

start() {
    docker-compose up -d
} 

logs() {
    docker-compose logs
}

stop() {
    docker-compose down
}

uninstall() {
    stop
    rm /usr/local/bin/nixus
    echo "To clean completely: $ rm -rf $(pwd)"
}

# Get containers that have a proper NIXUS_<PORT>
ps() {
    docker inspect -f "{{.Id}} {{.Config.Env}}" $(docker ps -a | awk 'NR>1 {print $1}') | grep "NIXUS_[^ ]*"
}


case "$1" in
        start)
            start
            ;;
         
        stop)
            stop
            ;;
         
        build)
            build
            ;;
        restart)
            stop
            start
            ;;
        uninstall)
            uninstall
            ;;
        ps)
            ps
            ;;
        *)
            echo $"Usage: $0 {start|stop|restart|build|uninstall}"
            exit 1
 
esac

cd $RESTORE_PATH